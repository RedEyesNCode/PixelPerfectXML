<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/half_circle_green"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/light_leave"
            android:layout_height="@dimen/_220sdp">
            <ImageView
                android:layout_width="@dimen/_145sdp"
                android:src="@drawable/asseter"
                android:layout_height="@dimen/_145sdp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/mine_shaft_black"
            android:fontFamily="@font/popregular"
            android:textSize="@dimen/_11ssp"
            android:text="Hello, nice to meet you."
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/mine_shaft_black"
            android:fontFamily="@font/popbold"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_16ssp"
            android:text="Get moving with RedEyesNCode"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_18sdp"
            app:cardElevation="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Enter your mobile number"
                    android:textColor="@color/mine_shaft_black"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"

                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"/>






            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/mine_shaft_black"
            android:fontFamily="@font/popmedium"
            android:gravity="bottom|center"
            android:textSize="@dimen/_9ssp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:text="By creating an account, you agree to our\nTerms \u0026 Privacy Policy"
            android:layout_height="match_parent"/>

    </LinearLayout>



</LinearLayout>