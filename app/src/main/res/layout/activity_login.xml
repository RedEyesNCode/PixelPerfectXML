<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".auth.LoginActivity">
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:id="@+id/btnBack"
        android:layout_margin="@dimen/_17ssp"
        android:src="@drawable/ic_back"
        android:layout_height="@dimen/_25sdp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/rbold"
                android:text="Login to Pixelate-XML"
                android:textColor="@color/black"
                android:textSize="@dimen/_19ssp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12ssp"
                android:background="@drawable/background_trans_black_stroke"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">
                <EditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/rmedium"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:textSize="@dimen/_11ssp"
                    android:hint="Enter your codename"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12ssp"
                android:background="@drawable/background_trans_black_stroke"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">
                <EditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/rmedium"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:textSize="@dimen/_11ssp"
                    android:hint="Enter your new password"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/rmedium"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="Forgot your password ?"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12ssp"
                android:id="@+id/btnNext"
                android:background="@drawable/background_blue_fill_curve"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/rmedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    android:text="Next"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/rmedium"
            android:paddingBottom="@dimen/_18sdp"
            android:text="Dont have an account ? Sign up here."
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />


    </RelativeLayout>
</LinearLayout>