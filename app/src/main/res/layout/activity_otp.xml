<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OtpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/half_circle_green"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_45sdp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_18sdp"
            android:layout_height="@dimen/_45sdp">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:src="@drawable/ic_back"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp"
                android:layout_height="@dimen/_20sdp"/>


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/light_leave"
            android:layout_height="@dimen/_220sdp">
            <ImageView
                android:layout_width="@dimen/_145sdp"
                android:src="@drawable/asseter"
                android:layout_height="@dimen/_145sdp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/mine_shaft_black"
            android:fontFamily="@font/popregular"
            android:textSize="@dimen/_11ssp"
            android:text="Hello, nice to meet you."
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/mine_shaft_black"
            android:fontFamily="@font/popbold"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_16ssp"
            android:text="Enter your OTP code below"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_18sdp"
            app:cardElevation="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_6sdp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="Enter your OTP"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/mine_shaft_black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_14ssp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_35sdp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/alto_grey"
                    app:cardCornerRadius="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/_35sdp">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:src="@drawable/ic_back"
                        android:layout_gravity="center"
                        android:rotation="180"
                        android:padding="@dimen/_4sdp"
                        android:layout_height="@dimen/_20sdp"/>


                </androidx.cardview.widget.CardView>




            </RelativeLayout>




        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/mine_shaft_black"
            android:fontFamily="@font/popmedium"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:text="Resend otp in 10 seconds"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>