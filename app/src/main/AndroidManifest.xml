<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.redeyesncode.cleancodexml">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_github"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_github"
        android:supportsRtl="true"
        android:theme="@style/Theme.CleanCodeXML"
        tools:targetApi="31">
        <activity
            android:name=".DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".auth.NotificationsActivity"
            android:exported="false" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.UserEmailActivity"
            android:exported="false" />
        <activity
            android:name=".auth.UserNameActivity"
            android:exported="false" />
        <activity
            android:name=".auth.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>